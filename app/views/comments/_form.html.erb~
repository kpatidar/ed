<%= form_for :comment,:url => album_photo_comments_path(@album,@photo,@comment),:html => { :multipart => true } do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :comment_message %><br />
    <%= f.text_field :comment_name %>
  </div>

  <div class="field">
    <%= f.hidden_field :photo_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
